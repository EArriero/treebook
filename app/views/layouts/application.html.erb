<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a class="main_logo navbar-brand" href="#">Treebook</a>
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<!-- Icons won't scale correctly in this case, thus, we use a bootstrap special class "icon-bar". -->
					<!-- <i class="fa fa-bars"></i>	 -->
					<span class="sr-only">Toggle Navigation</span>
					<span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
				</button>
					<!-- <img src="assets/logo.png" alt="" class="logo"> -->
			</div>
				
			<div class="menu collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					<!-- <li><a href="#">¿Cómo Funciona?</a></li>	
					<li><a href="#">Historias de Amor</a></li> -->
					<li><%= link_to "All Statuses", statuses_path %></li>
				
					<!-- The "data-toggle" attribute is needed to activate the modal. -->
          			<li><a data-toggle="modal" href="#textModal">Ingresar</a></li>
          			<!-- End modal trigger -->

					<li id="join_now"><a href="/users/new">Registrate Ahora</a></li>
				</ul>
			</div>
		</div>
	</div>
	<!-- End navbar -->


	<div class="container">
		<%= yield %>
	</div>

</body>
</html>
